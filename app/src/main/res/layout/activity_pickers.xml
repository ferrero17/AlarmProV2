<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="PickersActivity"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige una hora"
        android:textSize="24sp"
        android:layout_margin="16dp"
        />


    <EditText
        android:id="@+id/et_mostrar_hora_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="16dp"
        android:inputType="time"
        android:hint="hora"
        android:layout_centerInParent="true"/>


    <ImageButton
        android:id="@+id/ib_obtener_hora"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_mostrar_hora_picker"
        android:layout_centerInParent="true"
        android:background="@android:drawable/ic_lock_idle_alarm"
        tools:ignore="ContentDescription"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/botonConfirmarHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ib_obtener_hora"
        android:text="OK"
        android:textSize="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        />

</RelativeLayout>
